<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Rusantara" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
<!--        <item name="bottomNavigationStyle">@color/color_30</item>-->
        <item name="colorPrimary">@color/color_10</item>
        <item name="colorPrimaryVariant">@color/color_60</item>
        <item name="colorOnPrimary">@color/color_60</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_10</item>
        <item name="colorSecondaryVariant">@color/color_10</item>
        <item name="colorOnSecondary">@color/color_10</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_30_2</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TitleText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/color_10</item>
        <item name="android:textSize">26sp</item>
        <item name="android:fontFamily">@font/latobold</item>
    </style>

    <style name="BoldNormal" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/latobold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RegulerNormal" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/latoreguler</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LatoBold" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/latobold</item>
    </style>

    <style name="LatoReguler" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/latoreguler</item>
    </style>
</resources>